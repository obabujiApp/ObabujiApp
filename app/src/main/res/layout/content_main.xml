<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.obabuji.MainActivity"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#000"
            android:orientation="horizontal"
            android:layout_weight="3">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true" />

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="10"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.v7.widget.CardView
                        android:id="@+id/layout_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_margin="5dp"
                        app:cardElevation="5dp"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/megaphone" />

                            <TextView
                                android:id="@+id/tv_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/digital_marketing"
                                android:textColor="@android:color/black"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="5dp" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/layout_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_margin="5dp"
                        app:cardElevation="5dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/pay_click"
                                />

                            <TextView
                                android:id="@+id/tv_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pay_per_click_marketing"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.v7.widget.CardView
                        android:id="@+id/layout_3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardElevation="5dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/user" />

                            <TextView
                                android:id="@+id/tv_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/social_media_marketing"
                                android:textColor="@android:color/black"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="5dp" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/layout_4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardElevation="5dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/youtube_advert"
                                />

                            <TextView
                                android:id="@+id/tv_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/youtube_advertising"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.v7.widget.CardView
                        android:id="@+id/layout_5"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardElevation="5dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img5"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/smartphone" />

                            <TextView
                                android:id="@+id/tv_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mobile_marketing"
                                android:textColor="@android:color/black"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="5dp" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/layout_6"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardElevation="5dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img6"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/seo"

                                />

                            <TextView
                                android:id="@+id/tv_6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/seo"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.v7.widget.CardView
                        android:id="@+id/layout_7"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardElevation="5dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img7"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/content" />

                            <TextView
                                android:id="@+id/tv_7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/content_marketing"
                                android:textColor="@android:color/black"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="5dp" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/layout_8"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardElevation="5dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img8"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/email"
                                />

                            <TextView
                                android:id="@+id/tv_8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email_marketing"
                                android:textColor="@android:color/black"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.v7.widget.CardView
                        android:id="@+id/layout_9"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardElevation="5dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="60dp"
                                android:id="@+id/img9"
                                android:layout_height="60dp"
                                android:src="@drawable/crm" />

                            <TextView
                                android:id="@+id/tv_9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/crm"
                                android:gravity="center_horizontal"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="5dp" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/layout_10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        app:cardElevation="5dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img10"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/web_develop"
                                />

                            <TextView
                                android:id="@+id/tv_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/web_design_development"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
