<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorAccent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/obabuji_kid"
                app:civ_border_width="2dp"
                android:layout_gravity="center_horizontal"
                app:civ_border_color="@color/colorPrimary"/>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/btn_edit_name"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@id/tv_name"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/ic_edit_white_24dp"

                    />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_toLeftOf="@id/btn_edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:imeOptions="actionNone"
                    android:layout_below="@id/tv_name"
                    android:inputType="text"
                    android:enabled="false"
                    android:textColor="@android:color/black"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/company_name" />

                <TextView
                    android:id="@+id/btn_edit_company"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@id/tv_company_name"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/ic_edit_white_24dp"
                    />

                <EditText
                    android:id="@+id/et_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:imeOptions="actionNone"
                    android:layout_toLeftOf="@id/btn_edit_company"
                    android:layout_below="@id/tv_company_name"
                    android:inputType="text"
                    android:enabled="false"
                    android:textColor="@android:color/black"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile" />
                <TextView
                    android:id="@+id/btn_mobile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@id/tv_mobile"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/ic_edit_white_24dp"

                    />

                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_toLeftOf="@id/btn_mobile"
                    android:imeOptions="actionNone"
                    android:layout_below="@id/tv_mobile"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:enabled="false"
                    android:textColor="@android:color/black"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_id" />

                <TextView
                    android:id="@+id/btn_edit_email"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@id/tv_email"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/ic_edit_white_24dp"

                    />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_toLeftOf="@id/btn_edit_email"
                    android:layout_below="@id/tv_email"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNone"
                    android:enabled="false"
                    android:textColor="@android:color/black"
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


